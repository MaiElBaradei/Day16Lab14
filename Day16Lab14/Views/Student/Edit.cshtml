@model Student
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Student's Data</h2>

<form method="post" action="/Student/Edited">
    <div class="row mb-3">
        <div class="col-sm-10">
            <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Age" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age">
        </div>
    </div>

    <fieldset class="row mb-3">
        <label for="HId" class="col-sm-2 col-form-label">House Id:<br/> 1-Gryffindore <br /> 2-Hufflepuff <br/> 3-Ravenclaw<br/> 4-Slytherin</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="HId" name="HId" value="@Model.HId">

        </div>
    </fieldset>

    <div class="row mb-3">
        <input type="submit" value="Edit" class="btn btn-warning">
    </div>
    <div class="row mb-3">
        <a href="/" class="btn btn-secondary">Back to Index</a>
</div>
</form>